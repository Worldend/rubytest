<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label 'Имя' %><br>
    <%= f.text_field :commenter, :placeholder=>'Имя'%>
  </p>
  <p>
    <%= f.label 'Комментарий' %><br>
    <%= f.text_area :body, :placeholder=>'Текст комментария'%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
